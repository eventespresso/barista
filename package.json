{
	"name": "root",
	"private": true,
	"scripts": {
		"dev": "node scripts/watch.js",
		"start": "node scripts/start.js",
		"dev:all": "node scripts/watch.js --domains all",
		"build": "node scripts/build.js",
		"storybook": "yarn workspace @project/storybook storybook",
		"test": "FORCE_COLOR=true lerna run lint && CI=true FORCE_COLOR=true lerna run test -- --coverage",
		"deploy": "FORCE_COLOR=true lerna run deploy"
	},
	"workspaces": {
		"packages": [
			"domains/*",
			"packages/*"
		],
		"nohoist": [
			"domains/**/webpack-dev-server",
			"**/babel-loader",
			"**/babel-jest"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"dependencies": {
		"@apollo/react-hooks": "^3.1.4",
		"@chakra-ui/core": "^0.8.0",
		"apollo-cache-inmemory": "^1.6.6",
