{
	"name": "root",
	"private": true,
	"license": "GPL-3.0",
	"scripts": {
		"build": "yarn build:cra --domains \"all\"",
		"build:ci": "yarn lint:ci && FORCE_COLOR=true yarn build",
		"build:core": "yarn build:cra --domains \"core\" --skip-packages \"rrule-generator\"",
		"build:cra": "node scripts/build.js",
		"build:packages": "yarn build:cra",
		"build:rem": "yarn build:cra --domains \"rem\" --packages \"rrule-generator\"",
		"deploy": "FORCE_COLOR=true lerna run deploy",
		"dev": "yarn dev:watch --domains \"eventEditor\"",
		"dev:all": "yarn dev:watch --domains all",
		"dev:blocks": "yarn dev:watch --domains \"blocks\"",
		"dev:core": "yarn dev:watch --domains \"core\"",
		"dev:rem": "yarn dev:watch --domains \"eventEditor,rem\"",
		"dev:watch": "node scripts/watch.js",
		"generate:icons": "npx @svgr/cli --typescript --template packages/icons/scripts/template.js -d packages/icons/src/icons packages/icons/src/svg",
		"generate:css": "node packages/styles/bin/css-builder/css-builder",
		"lint": "node eslint/validate.js && lerna run lint",
		"lint:ci": "FORCE_COLOR=true yarn lint",
		"start": "node scripts/start.js",
		"storybook": "yarn workspace @eventespresso/storybook storybook",
		"test-unit": "node scripts/test.js",
		"test-unit:ci": "FORCE_COLOR=true CI=true yarn test-unit"
	},
	"workspaces": {
		"packages": [
			"domains/*",
			"packages/*"
		],
		"nohoist": [
			"domains/**/webpack-dev-server",
			"**/babel-loader",
			"**/babel-jest"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"babel": {
		"presets": [
			"react-app"
		]
	},
	"jest": {
		"collectCoverageFrom": [
			"src/**/*.{js,jsx,ts,tsx}",
			"!src/setupTests.{js,jsx,ts,tsx}",
			"!src/index.{js,jsx,ts,tsx}",
			"!src/serviceWorker.{js,jsx,ts,tsx}",
			"!src/**/*.(spec|test|stories).{js,jsx,ts,tsx}"
		]
	},
	"dependencies": {
		"@apollo/react-hooks": "^3.1.5",
		"@chakra-ui/core": "^0.8.0",
		"@chakra-ui/hooks": "^1.0.0-next.3",
		"@chakra-ui/system": "^1.0.0-next.3",
		"apollo-cache-inmemory": "^1.6.6",
		"apollo-client": "^2.6.10",
		"apollo-link-batch-http": "^1.2.14",
		"graphql": "^15.1.0",
		"graphql-tag": "^2.10.3",
		"ramda": "^0.27.0"
	},
	"devDependencies": {
		"@apollo/react-testing": "^3.1.4",
		"@babel/core": "7.10.3",
		"@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.1",
		"@babel/plugin-proposal-optional-chaining": "^7.10.3",
		"@babel/plugin-transform-runtime": "^7.10.3",
		"@svgr/webpack": "5.4.0",
		"@testing-library/jest-dom": "^5.11.0",
		"@testing-library/react": "^10.4.3",
		"@testing-library/react-hooks": "^3.3.0",
		"@testing-library/user-event": "^12.0.9",
		"@types/jest": "^26.0.3",
		"@types/jquery": "^3.3.38",
		"@types/ramda": "^0.27.6",
		"@typescript-eslint/eslint-plugin": "^3.4.0",
		"@typescript-eslint/parser": "^3.4.0",
		"@wordpress/babel-plugin-makepot": "^3.8.0",
		"@wordpress/dependency-extraction-webpack-plugin": "^2.8.0",
		"babel-eslint": "10.1.0",
		"babel-jest": "^26.1.0",
		"babel-loader": "8.1.0",
		"babel-plugin-named-asset-import": "^0.3.6",
		"babel-preset-react-app": "^9.1.2",
		"camelcase": "^6.0.0",
		"case-sensitive-paths-webpack-plugin": "2.3.0",
		"css-loader": "3.6.0",
		"dotenv": "8.2.0",
		"dotenv-expand": "5.1.0",
		"eslint": "^7.3.1",
		"eslint-config-prettier": "^6.11.0",
		"eslint-config-react-app": "^5.2.1",
		"eslint-loader": "^4.0.2",
		"eslint-plugin-ee-barista": "file:./eslint",
		"eslint-plugin-flowtype": "5.1.3",
		"eslint-plugin-import": "2.21.2",
		"eslint-plugin-jest": "^23.17.1",
		"eslint-plugin-jsx-a11y": "6.3.1",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "7.20.0",
		"eslint-plugin-react-hooks": "^4.0.4",
		"eslint-plugin-react-perf": "^3.2.4",
		"file-loader": "6.0.0",
		"fs-extra": "^9.0.1",
		"html-webpack-plugin": "4.3.0",
