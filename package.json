{
	"name": "root",
	"private": true,
	"license": "GPL-3.0",
	"scripts": {
		"build": "yarn build:cra",
		"build-storybook": "BUILD_POT=false build-storybook",
		"build:ci": "FORCE_COLOR=true yarn build",
		"build:cra": "node scripts/build.js",
		"build:core": "yarn build:cra --domains \"core\" --skip-packages \"rrule-generator\"",
		"build:es:edtrSlots": "yarn build:cra --domains \"eventSmart/admin/edtrSlots\" --skip-all-packages",
		"build:packages": "yarn build:cra",
		"build:rem": "yarn build:cra --domains \"rem\" --packages \"rrule-generator\"",
		"build:es:upsellEditor": "yarn build:cra --domains \"eventSmart/admin/upsellEditor\" --skip-all-packages",
		"build:wpUser": "yarn build:cra --domains \"wpUser\" --skip-all-packages",
		"compile": "yarn tsc",
		"deploy": "FORCE_COLOR=true lerna run deploy",
		"dev": "yarn dev:watch --domains \"core\"",
		"dev:all": "yarn dev:watch",
		"dev:blocks": "yarn dev:watch --domains \"blocks\"",
		"dev:core": "yarn dev:watch --domains \"core\"",
		"dev:rem": "yarn dev:watch --domains \"eventEditor,rem\"",
		"dev:watch": "node scripts/watch.js",
		"gen-workspaces": "node scripts/gen-workspaces.js",
		"generate:css": "node packages/styles/bin/css-builder/css-builder",
		"generate:icons": "npx @svgr/cli --config-file packages/icons/.svgrrc.js -d packages/icons/src/icons packages/icons/src/svg",
		"lint": "node eslint/validate.js && yarn workspaces run lint",
		"lint:ci": "FORCE_COLOR=true yarn lint",
		"postinstall": "yarn gen-workspaces && husky install",
		"sb": "start-storybook -p 6006",
		"start": "node scripts/start.js",
		"test": "node scripts/test.js",
		"test:ci": "FORCE_COLOR=true CI=true yarn test",
		"test:e2e": "jest --config packages/e2e-tests/jest.playwright.config.ts --bail --forceExit",
		"test:e2e:watch": "jest --config packages/e2e-tests/jest.playwright.config.ts --watch --bail --forceExit",
		"update-deps": "npx ncu -u && yarn workspaces run update-deps"
	},
	"lint-staged": {
		"./**/*.{js,jsx,ts,tsx}": "yarn eslint"
	},
	"workspaces": {
		"packages": [
			"domains/**",
			"packages/**"
		],
		"nohoist": [
			"**/babel-loader",
			"**/babel-jest"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"babel": {
		"presets": [
			"react-app"
		]
	},
	"jest": {
		"collectCoverageFrom": [
			"src/**/*.{js,jsx,ts,tsx}",
			"!src/setupTests.{js,jsx,ts,tsx}",
			"!src/index.{js,jsx,ts,tsx}",
			"!src/serviceWorker.{js,jsx,ts,tsx}",
			"!src/**/*.(spec|test|stories).{js,jsx,ts,tsx}"
		]
	},
	"dependencies": {
		"classnames": "^2.3.1",
		"ramda": "^0.27.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2"
