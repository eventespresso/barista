{
	"name": "root",
	"private": true,
	"license": "GPL-3.0",
	"scripts": {
		"build": "yarn build:cra --domains \"all\"",
		"build:ci": "FORCE_COLOR=true yarn build",
		"build:core": "yarn build:cra --domains \"core\" --skip-packages \"rrule-generator\"",
		"build:cra": "node scripts/build.js",
		"build:packages": "yarn build:cra",
		"build:rem": "yarn build:cra --domains \"rem\" --packages \"rrule-generator\"",
		"build-storybook": "BUILD_POT=false build-storybook",
		"chromatic": "chromatic",
		"deploy": "FORCE_COLOR=true lerna run deploy",
		"dev": "yarn dev:watch --domains \"eventEditor\"",
		"dev:all": "yarn dev:watch --domains all",
		"dev:blocks": "yarn dev:watch --domains \"blocks\"",
		"dev:core": "yarn dev:watch --domains \"core\"",
		"dev:rem": "yarn dev:watch --domains \"eventEditor,rem\"",
		"dev:watch": "node scripts/watch.js",
		"generate:icons": "npx @svgr/cli --typescript --template packages/icons/scripts/template.js -d packages/icons/src/icons packages/icons/src/svg",
		"generate:css": "node packages/styles/bin/css-builder/css-builder",
		"lint": "node eslint/validate.js && lerna run lint",
		"lint:ci": "FORCE_COLOR=true yarn lint",
		"postinstall": "husky install",
		"start": "node scripts/start.js",
		"sb": "start-storybook -p 6006",
		"test-unit": "node scripts/test.js",
		"update-deps": "npx ncu -u && yarn workspaces run update-deps",
		"test-unit:ci": "FORCE_COLOR=true CI=true yarn test-unit"
	},
	"lint-staged": {
		"./**/*.{js,jsx,ts,tsx,css,scss}": "yarn eslint"
	},
	"workspaces": {
		"packages": [
			"domains/*",
			"packages/*"
		],
		"nohoist": [
			"domains/**/webpack-dev-server",
			"**/babel-loader",
			"**/babel-jest"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"babel": {
		"presets": [
			"react-app"
		]
	},
	"jest": {
		"collectCoverageFrom": [
			"src/**/*.{js,jsx,ts,tsx}",
			"!src/setupTests.{js,jsx,ts,tsx}",
			"!src/index.{js,jsx,ts,tsx}",
			"!src/serviceWorker.{js,jsx,ts,tsx}",
			"!src/**/*.(spec|test|stories).{js,jsx,ts,tsx}"
		]
	},
	"dependencies": {
		"classnames": "^2.2.6",
		"ramda": "^0.27.1",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"uuid": "^8.3.1"
	},
