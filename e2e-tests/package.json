{
  "author": "Event Espresso",
  "name": "@eventespresso/e2e",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eventespresso/barista.git"
  },
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test": "yarn playwright test",
    "trace": "yarn playwright show-trace",
    "report": "yarn playwright show-report",
    "install-deps": "yarn playwright install --with-deps",
    "docker:cli": "yarn ts-node ./wp-env/run.ts run",
    "docker:make-config": "yarn ts-node ./wp-env/run.ts make config",
    "docker:start": "yarn docker:make-config && yarn wp-env start",
    "docker:update": "yarn docker:start --update",
    "docker:stop": "yarn wp-env stop",
    "docker:restart": "yarn wp-env start --update",
    "docker:clear:dev": "yarn wp-env clean development",
    "docker:clear:tests": "yarn wp-env clean tests",
    "docker:clear:all": "yarn wp-env clean all",
    "docker:destroy": "yarn wp-env destroy",
    "lint": "eslint ./**/*.{ts,tsx} --format=codeframe",
    "lint-fix": "eslint ./**/*.{js,jsx,ts,tsx} --format=codeframe --fix",
    "update-deps": "npx ncu -u"
  },
  "dependencies": {
    "@faker-js/faker": "^8.0.2",
    "@playwright/test": "^1.36.1",
    "commander": "^11.0.0",
    "ts-node": "^10.9.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@commander-js/extra-typings": "^11.0.0"
  },
  "license": "GPL-3.0"
}
